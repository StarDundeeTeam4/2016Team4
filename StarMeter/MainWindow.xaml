<Window x:Class="StarMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Column used to preserve formatting of columns.-->
                <!--These columns show the packet data for each channel.-->
                <ColumnDefinition  Name="Data1a" Width="2*" />
                <ColumnDefinition Name="Data1b" Width="2*" />
                <ColumnDefinition Name="Data2a" Width="2*" />
                <ColumnDefinition Name="Data2b" Width="2*" />
                <ColumnDefinition Name="Data3a" Width="2*" />
                <ColumnDefinition Name="Data3b" Width="2*" />
                <ColumnDefinition Name="Data4a" Width="2*" />
                <ColumnDefinition Name="Data4b" Width="2*" />

                <!--Column used to preserve formatting of columns.-->
            </Grid.ColumnDefinitions>
        </Grid>
    </StackPanel>
    
</Window>
