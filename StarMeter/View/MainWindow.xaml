                        <TextBox TextChanged="StartTimeTextBox_TextChanged" Grid.Column="0" Grid.Row="2" Margin="8,0,10,5"  Name="StartTimeTextBox" FontFamily="Gill Sans MT" FontSize="11"/>
                        <TextBox TextChanged="EndTimeTextBox_TextChanged" Grid.Column="1" Grid.Row="2" Margin="8,0,10,5" Name="EndTimeTextBox" FontFamily="Gill Sans MT" FontSize="11"/>
