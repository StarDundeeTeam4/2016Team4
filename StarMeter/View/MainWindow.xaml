            <Label Grid.Column="1" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Foreground="White" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Name="lblViewingSpecific" FontFamily="Gill Sans MT">Viewing packets between 00:00:00.000 and 00:00:00.000</Label>
            <Button Name="BackToNormalPage" Click="BackToNormalPage_Click" Grid.Column="2" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Foreground="White" Background="Red" VerticalAlignment="Stretch" FontFamily="Gill Sans MT" VerticalContentAlignment="Center">GO BACK</Button>

        </Grid>

    </Grid>

